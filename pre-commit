#!/bin/sh

# make the script executable
chmod +x .git/hooks/pre-commit

# run prettier
echo "ğŸ›  Running Prettier..."
npm run format

# run eslint
echo "âœ¨ Running ESLint..."
npm run lint

# run laravel pint
echo "ğŸ›  Running Laravel Pint..."
php vendor/bin/pint

# check if any files have been changed
if ! git diff --quiet; then
    echo "âŒ Some files have been changed. Please run 'git add .' and commit again."
    exit 1
fi

# all files are formatted correctly
echo "âœ… All files are formatted correctly. Committing..."
exit 0
